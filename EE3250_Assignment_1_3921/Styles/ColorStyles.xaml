<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--#region Background-->
    <LinearGradientBrush x:Key="backgroundColor" StartPoint="0,0" EndPoint="0,5">
        <GradientStop Color="#3a80a1" Offset="0.0"/>
        <GradientStop Color="#FFF5ECEB" Offset="0.6"/>
    </LinearGradientBrush>
    <!--#endregion-->

    <!--#region Buttons background-->
    <LinearGradientBrush x:Key="buttonColor" StartPoint="0,0" EndPoint="0,5">
        <GradientStop Color="#3a80a1" Offset="0.0"/>
        <GradientStop Color="#FFF5ECEB" Offset="0.6"/>
    </LinearGradientBrush>
    <!--#endregion-->

    <!--#region TitleBar-->
    <LinearGradientBrush x:Key="titleBarColor" StartPoint="0,0" EndPoint="0,5">
        <GradientStop Color="#d3ebf5" Offset="0.0"/>
        <GradientStop Color="White" Offset="0.8"/>
    </LinearGradientBrush>
    <!--#endregion-->

    <!--#region TextBox Styles -->
    <Style x:Key="textBoxStyle" TargetType="TextBox">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource buttonColor}"/>
    </Style>
    <!--#endregion-->

</ResourceDictionary>